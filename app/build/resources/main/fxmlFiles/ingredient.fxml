<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="34.0" prefWidth="150.0" style="-fx-background-color: ffa9a9;" styleClass="recipeAnchorStyle" stylesheets="@style.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.IngredientController">
   <children>
      <HBox alignment="CENTER" prefHeight="34.0" prefWidth="141.0" spacing="3.0">
         <children>
            <AnchorPane onMousePressed="#ingredientClick" prefHeight="24.0" prefWidth="43.0">
               <HBox.margin>
                  <Insets bottom="5.0" left="15.0" top="5.0" />
               </HBox.margin>
               <children>
                  <ImageView fx:id="ingredientButton" fitHeight="25.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/uncheck.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <Label fx:id="ingredientLbl" prefHeight="24.0" prefWidth="112.0" styleClass="black" stylesheets="@style.css" text="Beef" />
         </children>
      </HBox>
   </children>
</AnchorPane>
